{
  "title": "Elecom Trackball Mouse Mods",
  "rules": [
    {
      "description": "Back Button",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Forward Button",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Wheel Center Click",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "button1",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    }
  ]
}
