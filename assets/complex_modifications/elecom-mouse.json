{
  "title": "Elecom Trackball Mouse Mods",
  "rules": [
    {
      "description": "Back Button",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Forward Button",
      "manipulators": [
        {
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Wheel Center Click",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "button1",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    }
  ]
}
